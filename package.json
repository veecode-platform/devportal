{
  "name": "root",
  "version": "0.22.3",
  "private": true,
  "engines": {
    "node": "18 || 20"
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "dev-local": "NODE_OPTIONS='--no-node-snapshot' concurrently \"yarn start --config ../../app-config.local.yaml\" \"yarn start-backend --config ../../app-config.local.yaml\"",
    "start": "yarn workspace app start",
    "start-backend": "yarn workspace backend start",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' yarn tsc && backstage-cli repo build --all",
    "build:backend": "yarn tsc && yarn workspace backend build",
    "build-image": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli clean && lerna run clean",
    "diff": "lerna run diff --",
    "test": "backstage-cli test",
    "test:all": "lerna run test -- --coverage",
    "lint": "backstage-cli repo lint --since origin/master",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "new": "backstage-cli new --scope internal",
    "remove-plugin": "backstage-cli remove-plugin",
    "clear-deps": "find .  -path ./.docker-data -prune -o -name node_modules -type d -exec rm -rf '{}' +",
    "docker-up": "docker compose --profile=complete up -d",
    "docker-down": "docker compose --profile=complete down",
    "check": "yarn upgrade-interactive"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.28.2",
    "@spotify/prettier-config": "^12.0.0",
    "@types/cookie-parser": "^1.4.5",
    "concurrently": "^6.0.0",
    "lerna": "^7.3.0",
    "prettier": "^2.3.2",
    "typescript": "~5.2.0"
  },
  "resolutions": {
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@apidevtools/json-schema-ref-parser": "9.1.0",
    "fast-xml-parser": "^4.4.1"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.5.1"
}
